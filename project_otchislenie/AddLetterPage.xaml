<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="project_otchislenie.AddLetterPage"
             Title="AddLetterPage">
    <VerticalStackLayout>
        <Label Text="Причина"/>
        <Picker ItemsSource="{Binding ResignationLetter.ReasonId}"/>
        <Label Text="Дата подачи заявления"/>
        <DatePicker Date="{Binding ResignationLetter.Date}" />
        <Label Text="Студент"/>
        <Picker ItemsSource="{Binding ResignationLetter.StudentId}" />
        <Button Text="Сохранить" Clicked="SaveLetter"/>
    </VerticalStackLayout>
</ContentPage>